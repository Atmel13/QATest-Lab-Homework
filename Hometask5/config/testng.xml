<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="QATestlab" verbose="1" >


    <test name="Create New Product [chrome]" >

        <parameter name="selenium.browser" value="chrome"/>
        <parameter name="selenium.grid" value="http://localhost:4444/wd/hub"/>

        <classes>
            <class name = "Lesson5Homework.tests.PlaceOrderTest" />
        </classes>
    </test>


    <test name="Create New Product [firefox]" >

        <parameter name="selenium.browser" value="firefox"/>
        <parameter name="selenium.grid" value="http://localhost:4444/wd/hub"/>

        <classes>
            <class name = "Lesson5Homework.tests.PlaceOrderTest" />
        </classes>
    </test>


    <test name="Create New Product [IE]" >

        <parameter name="selenium.browser" value="ie"/>
        <parameter name="selenium.grid" value="http://localhost:4444/wd/hub"/>

        <classes>
            <class name = "Lesson5Homework.tests.PlaceOrderTest" />
        </classes>
    </test>

</suite>